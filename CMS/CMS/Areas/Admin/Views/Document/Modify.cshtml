
@{
    ViewBag.Title = "Thêm - Sửa tài liệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="modifyDocumentController">
    <!--Header Section-->
    <div class="section-header">
        <ol class="breadcrumb">
            <li class="active text-uppercase" style="width: 100%">
                <div class="col-md-4">
                    @ViewBag.Title
                </div>
                <div class="col-md-8">
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-success" ng-click="Save()"><span class="fa fa-edit"></span> Lưu</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndExit()"><span class="fa fa-check-square-o"></span> Lưu & Thoát</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndAdd()"><span class="fa fa-plus"></span> Lưu & Thêm mới</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-danger" ng-click="Cancel()"><span class="fa fa-remove"></span> Hủy bỏ</button>
                    </div>
                </div>
            </li>
        </ol>
    </div>

    <!--Body-->
    <div class="section-body">
        @*<input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />*@
        <div class="row">

        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                <form class="form" role="form">
                    <span us-spinner="{radius:15, width:4, length: 8}"></span>
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group  " ng-class="{'has-error':!document.name, 'has-success':document.name}">
                                <input type="text" class="form-control" id="name" name="name" ng-model="document.name" ng-change="GenAlias()">
                                <label for="name">Tên tài liệu *</label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <input type="text" class="form-control" id="alias" ng-model="document.alias" name="alias" readonly>
                                <label for="alias">Alias</label>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col-md-9">
                        <form class="form" role="form">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-content">
                                        <input type="text" class="form-control" id="image" ng-model="document.url">
                                        <label for="image">Tài liệu</label>
                                    </div>
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" ng-click="ChooseDocument()" type="button">Chọn</button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <textarea class="form-control" rows="3" placeholder="" ng-model="document.description"></textarea>
                                <label for="description">Mô tả</label>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-3">
                        <form class="form" role="form">
                            <div class="form-group ">
                                <select id="idCategory" name="idCategory" class="form-control" ng-model="document.idCategory">
                                    <option ng-value="option.id" ng-repeat="option in categoryDocuments" ng-selected="document.idCategory == option.id">{{option.title}}</option>
                                </select>
                                <label for="idCategory">Danh mục</label>
                            </div>
                            <div class="form-group">
                                <input type="date" class="form-control" id="timePublished" ng-model="document.timePublished">
                                <label for="timePublished">Ngày ban hành</label>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="nameUnit" ng-model="document.nameUnit">
                                <label for="nameUnit">Đơn vị</label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>