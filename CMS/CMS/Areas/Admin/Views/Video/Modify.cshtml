
@{
    ViewBag.Title = "Thêm Video";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="modifyVideoController">
    <!--Header Section-->
    <div class="section-header">
        <ol class="breadcrumb">
            <li class="active text-uppercase" style="width: 100%">
                <div class="col-md-4">
                    @ViewBag.Title
                </div>
                <div class="col-md-8">
                    <div class="col-md-3 pull-right">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-danger" ng-click="Cancel()"><span class="fa fa-remove"></span> Đóng</button>
                    </div>
                    <div class="col-md-3 pull-right">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-success" ng-click="Save()"><span class="fa fa-edit"></span> Lưu</button>
                    </div>
                    @*<div class="col-md-3">
                            <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndExit()"><span class="fa fa-check-square-o"></span> Lưu & Thoát</button>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndAdd()"><span class="fa fa-plus"></span> Lưu & Thêm mới</button>
                        </div>*@

                </div>
            </li>
        </ol>
    </div>

    <!--Body-->
    <div class="section-body">
        @*<input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />*@
        <div class="row">

        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                <form class="form" role="form">
                    <span us-spinner="{radius:15, width:4, length: 8}"></span>
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group  " ng-class="{'has-error':!video.title, 'has-success':video.title}">
                                <input type="text" class="form-control" id="title" name="title" ng-model="video.title" ng-change="GenAlias()">
                                <label for="title">Tiêu đề video *</label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <input type="text" class="form-control" id="alias" ng-model="video.alias" name="alias" readonly>
                                <label for="alias">Alias</label>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col-md-8">
                        <form class="form" role="form">
                            <div class="form-group">
                                <input type="text" class="form-control" id="image" ng-model="video.url">
                                <label for="image">Link video</label>
                                <br />
                                <iframe width="100%" height="400" src="{{video.url | trustUrl}}" frameborder="0" allowfullscreen ng-show="video.url"></iframe>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-4">
                        <form class="form" role="form">
                            <div class="form-group ">
                                <select id="published" name="published" class="form-control" ng-model="video.published">
                                    <option ng-value="option.value" ng-repeat="option in statuses" ng-selected="video.published == option.value">{{option.text}}</option>
                                </select>
                                <label for="published">Trạng thái</label>
                            </div>
                            <div class="form-group ">
                                <select id="featured" name="featured" class="form-control" ng-model="video.featured">
                                    <option ng-value="option.value" ng-repeat="option in featureds" ng-selected="video.featured == option.value">{{option.text}}</option>
                                </select>
                                <label for="featured">Nổi bật</label>
                            </div>
                            <div class="form-group ">
                                <textarea name="description" id="description" class="form-control" rows="2" placeholder="" ng-model="video.description"></textarea>
                                <label for="description">Mô tả</label>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-content">
                                        <input type="text" class="form-control" id="image" ng-model="video.image">
                                        <label for="image">Ảnh đại diện</label>
                                    </div>
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" ng-click="ChooseImage()" type="button">Chọn</button>
                                    </div>
                                </div>
                                <img class="img-responsive" src="{{video.image}}" ng-show="video.image" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>