@{
    ViewBag.Title = "Quản lý Thư viện ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="albumController">
    <!--Header Section-->
    <div class="section-header">
        <ol class="breadcrumb">
            <li class="active text-uppercase">@ViewBag.Title</li>
        </ol>
    </div>

    <!--Body-->
    <div class="section-body">
        @*<input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />*@
        <div class="row">

        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                @*<span us-spinner="{radius:15, width:4, length: 8}"></span>*@
                <!--Albums-->
                <div class="col-md-12 col-sm-12 col-xs-12" id="album">
                    <div id="gridContainer" dx-data-grid="gridAlbums"></div>
                    <div dx-context-menu="contextMenuAlbum"></div>
                </div>

                <!--Popup Delete-->
                <div class="popup" dx-popup="popupDeleteAlbum">
                    <div data-options="dxTemplate: { name:'templateDeleteAlbum' }">
                        <div style="text-align: center" ng-cloak>{{titleDeleteAlbum}}</div>
                        <br />
                        <div dx-button="{ text: 'Có', icon: 'floppy', onClick: ConfirmDeleteAlbum, type: 'success' }"></div>
                        <div dx-button="{ text: 'Không', icon: 'clear', onClick: CancelDeleteAlbum, type: 'danger' }"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




