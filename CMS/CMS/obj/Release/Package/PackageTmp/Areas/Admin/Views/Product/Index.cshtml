
@{
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="productController">
    <!--Header Section-->
    <div class="section-header">
        <ol class="breadcrumb">
            <li class="active text-uppercase">Quản lý Sản phẩm</li>
        </ol>
    </div>

    <!--Body-->
    <div class="section-body">
        @*<input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />*@
        <div class="row">

        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                @*<span us-spinner="{radius:15, width:4, length: 8}"></span>*@
                <!--Category Product-->
                <div class="col-md-12 col-sm-12 col-xs-12" id="product">
                    <div id="gridContainer" dx-data-grid="gridProducts"></div>
                    <div dx-context-menu="contextMenuProduct"></div>
                </div>

                <!--Popup Delete-->
                <div class="popup" dx-popup="popupDeleteProduct">
                    <div data-options="dxTemplate: { name:'templateDeleteProduct' }">
                        <div style="text-align: center" ng-cloak>{{titleDeleteProduct}}</div>
                        <br />
                        <div dx-button="{ text: 'Có', icon: 'floppy', onClick: ConfirmDeleteProduct, type: 'success' }"></div>
                        <div dx-button="{ text: 'Không', icon: 'clear', onClick: CancelDeleteProduct, type: 'danger' }"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




